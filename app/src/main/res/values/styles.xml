<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- base set of styles that apply to all versions -->
    <style name="Theme.TestLab" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_variant</item>
        <item name="colorAccent">@color/black</item>
        <item name="fontFamily">@font/alte_haas_grotesk_bold</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorControlActivated">@color/secundary</item>
    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="Theme.TestLab" />
</resources>